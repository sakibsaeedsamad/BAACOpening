<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:background="@drawable/header_background_gradiant"
        android:gravity="center"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="8"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_end_10"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/title"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_textsize_base" />

            <ImageView
                android:id="@+id/iv_header_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-15dp"
                android:layout_weight="8"
                android:src="@drawable/icon_help"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>